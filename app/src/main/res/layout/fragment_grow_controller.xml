                        android:id="@+id/editTextNumber_fan1maxvolt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:ems="10"
                        android:inputType="number"
                        android:text="@={viewmodel.fan0max}"/>

                </FrameLayout>

